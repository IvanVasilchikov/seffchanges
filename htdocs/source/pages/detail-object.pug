extends ../layouts/main.pug

include ../blocks/detail/detail.pug

block vars
  - homepage = false;
  - var detail = require('../data/detail-object.json');
  - var popupsForm = require('../data/popups/form.json');
  - var popupsResponse = require('../data/popups/response.json');

block script
  script.
    window.INIT = {
      detailObject: !{JSON.stringify(detail)},
      popups: {
        form: !{JSON.stringify(popupsForm)},
        response: !{JSON.stringify(popupsResponse)},
      }
    };

block content
  +detail(detail)
